<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Orderdetails"
    android:background="@drawable/adminbg">
    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:background="#18CCBD">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contact Us"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#170202"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/animation"
        android:layout_below="@id/text"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="180dp"
            app:lottie_rawRes="@raw/contactuss"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/animation"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animation">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Email"
                    android:textColor="#250303"
                    android:textSize="20dp"
                    android:textStyle="italic|bold">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l1"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="60dp"
                    android:text="angelveena2001@gmail.com"
                    android:textColor="#1C14E3"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:id="@+id/im1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:paddingEnd="0dp"
                    android:src="@drawable/email_24">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l2"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Phone Number"
                    android:textColor="#250303"
                    android:textSize="20dp"
                    android:textStyle="italic|bold">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l3"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="60dp"
                    android:text="6384695709, 9751526197"
                    android:textColor="#1C14E3"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:id="@+id/im2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:paddingEnd="0dp"
                    android:src="@drawable/phone24">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l4"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Address"
                    android:textColor="#250303"
                    android:textSize="20dp"
                    android:textStyle="italic|bold">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l5"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="60dp"
                    android:text="25/39,South Street,Varadarajanpet,Ariyalur(Distrct),Tamil Nadu,Pincode(621-805)"
                    android:textColor="#1C14E3"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/l7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l6"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:text="Send Message "
                    android:textColor="#61050D"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pnamelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l7"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <EditText
                    android:id="@+id/pname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border"
                    android:fontFamily="sans-serif-black"
                    android:hint="Name"
                    android:padding="15sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="#C65D0B"
                    android:textSize="20sp"
                    android:textStyle="italic" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemquantitylayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pnamelayout"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <EditText
                    android:id="@+id/pemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border"
                    android:fontFamily="sans-serif-black"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="15sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="#C65D0B"
                    android:textSize="20sp"
                    android:textStyle="italic" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/itempricelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemquantitylayout"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <EditText
                    android:id="@+id/pmessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border"
                    android:fontFamily="sans-serif-black"
                    android:hint="Message"
                    android:padding="15sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="#C65D0B"
                    android:textSize="20sp"
                    android:textStyle="italic" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/sendme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="#7E0A78"
                    android:gravity="center"
                    android:text="Send Message">

                </Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
